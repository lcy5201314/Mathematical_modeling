# IRIX 5.x with the DCC compiler
#CXX         = DCC
#PRELINK     = /usr/lib/DCC/edg_prelink $(OBJS)
#CXXFLAGS    = -g +w +pp -O
#CXX_INC_DIR = /usr/include/CC
#LD          = ld
#AR          = ar rv
#INSTALL     = bsdinst -c


.SUFFIXES: .C
.C.o:
	$(CXX) $(CXXFLAGS) $(INC_DIRS) -c $<
